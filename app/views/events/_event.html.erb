<div class="card">
  <img class="card-img-top w-100" src="<%= event.image_url %>" alt="">
  <div class="card-block">
    <h4 class="card-title">
      <%= event.title.html_safe %>
    </h4>

    <p class="card-text">
      <%= event.summary.gsub(/\n/, '<br/><br/>').html_safe %>
    </p>

    <p class="card-text">
      <small class="text-muted">
        Last updated <%= time_ago_in_words(event.updated_at) %> ago
      </small>
    </p>
  </div>
</div>
